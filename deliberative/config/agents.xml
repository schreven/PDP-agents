<?xml version="1.0" encoding="ISO-8859-1"?>

<agents>
	<!-- A list of agents and their behavior classes -->

	<!-- #### DELIBERATIVE AGENTS ### -->
	<agent name="deliberative-random">
		<set class-path="bin/"/>
		<set class-name="template.DeliberativeTemplate"/>
		<set algorithm="BFS"/>
	</agent>

	<agent name="deliberative-main">
		<set class-path="bin/"/>
		<set class-name="solution.DeliberativeSolution"/>
		<set algorithm="ASTAR"/>
		<set heuristic = "all-distances"/>
	</agent>

	<agent name="deliberative-BFS">
		<set class-path="bin/"/>
		<set class-name="solution.DeliberativeSolution"/>
		<set algorithm="BFS"/>
	</agent>

	<agent name="deliberative-ASTAR-1">
		<set class-path="bin/"/>
		<set class-name="solution.DeliberativeSolution"/>
		<set algorithm="ASTAR"/>
		<set heuristic = "current-distance"/>
	</agent>

	<agent name="deliberative-ASTAR-2">
		<set class-path="bin/"/>
		<set class-name="solution.DeliberativeSolution"/>
		<set algorithm="ASTAR"/>
		<set heuristic = "all-distances"/>
	</agent>

	<agent name="deliberative-ASTAR-3">
		<set class-path="bin/"/>
		<set class-name="solution.DeliberativeSolution"/>
		<set algorithm="ASTAR"/>
		<set heuristic = "greedy-path"/>
	</agent>

</agents>
